{
  "version": "2.0.0",
  "updated": "2026-01-11",
  "description": "Schema for the Free Crypto News Archive - the definitive historical record of crypto news",
  "article": {
    "type": "object",
    "description": "Individual article record in JSONL format",
    "properties": {
      "id": {
        "type": "string",
        "description": "SHA256 hash of normalized URL - content-addressable identifier"
      },
      "schema_version": {
        "type": "string",
        "description": "Schema version for forward compatibility"
      },
      "title": {
        "type": "string",
        "description": "Article headline"
      },
      "link": {
        "type": "string",
        "description": "Original article URL"
      },
      "canonical_link": {
        "type": "string",
        "description": "Normalized URL (tracking params removed)"
      },
      "description": {
        "type": "string",
        "description": "Article summary/lede"
      },
      "source": {
        "type": "string",
        "description": "Human-readable source name"
      },
      "source_key": {
        "type": "string",
        "description": "Machine-readable source identifier"
      },
      "category": {
        "type": "string",
        "enum": ["general", "bitcoin", "defi", "nft", "regulation", "exchange", "mining", "layer2", "stablecoin", "hack", "institutional", "opinion"],
        "description": "Primary content category"
      },
      "pub_date": {
        "type": "string",
        "format": "date-time",
        "description": "Publication date from source"
      },
      "first_seen": {
        "type": "string",
        "format": "date-time",
        "description": "When we first captured this article"
      },
      "last_seen": {
        "type": "string",
        "format": "date-time",
        "description": "Most recent time we saw this in feeds"
      },
      "fetch_count": {
        "type": "integer",
        "description": "How many times we've seen this article"
      },
      "tickers": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Extracted cryptocurrency tickers (BTC, ETH, SOL, etc.)"
      },
      "entities": {
        "type": "object",
        "properties": {
          "people": { "type": "array", "items": { "type": "string" } },
          "companies": { "type": "array", "items": { "type": "string" } },
          "protocols": { "type": "array", "items": { "type": "string" } }
        },
        "description": "Extracted named entities"
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Content tags (regulation, hack, partnership, etc.)"
      },
      "sentiment": {
        "type": "object",
        "properties": {
          "score": { "type": "number", "minimum": -1, "maximum": 1 },
          "label": { "type": "string", "enum": ["very_negative", "negative", "neutral", "positive", "very_positive"] },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "description": "Sentiment analysis results"
      },
      "market_context": {
        "type": "object",
        "properties": {
          "btc_price": { "type": "number" },
          "eth_price": { "type": "number" },
          "total_market_cap": { "type": "number" },
          "btc_dominance": { "type": "number" },
          "fear_greed_index": { "type": "integer" }
        },
        "description": "Market state at first_seen time"
      },
      "content_hash": {
        "type": "string",
        "description": "SHA256 of title+description for content deduplication and integrity"
      },
      "meta": {
        "type": "object",
        "properties": {
          "word_count": { "type": "integer" },
          "has_numbers": { "type": "boolean" },
          "is_breaking": { "type": "boolean" },
          "is_opinion": { "type": "boolean" }
        },
        "description": "Content metadata"
      }
    },
    "required": ["id", "schema_version", "title", "link", "source", "first_seen"]
  },
  "snapshot": {
    "type": "object",
    "description": "Hourly trending snapshot",
    "properties": {
      "timestamp": { "type": "string", "format": "date-time" },
      "top_articles": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Article IDs in trending order"
      },
      "top_tickers": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "ticker": { "type": "string" },
            "mention_count": { "type": "integer" }
          }
        }
      },
      "source_counts": {
        "type": "object",
        "additionalProperties": { "type": "integer" }
      },
      "market_state": {
        "type": "object",
        "properties": {
          "btc_price": { "type": "number" },
          "eth_price": { "type": "number" },
          "fear_greed_index": { "type": "integer" }
        }
      }
    }
  }
}
